#!/usr/bin/expect -f

# Expect wrapper for deb-s3 that provides the GPG signing password
# when prompted.

# Wait upto 1 hour
set timeout 3600

spawn deb-s3 upload \
        --sign \
        --preserve_versions \
        --bucket "$env(BUCKET)" \
        --prefix "$env(BASE_PATH)apt" \
        --arch $env(arch) \
        -o "$env(ORIGIN)" \
        {*}$argv
expect {
  "Enter passphrase: " {
    send -- "$env(PASS)\r"
    exp_continue
  }
}
